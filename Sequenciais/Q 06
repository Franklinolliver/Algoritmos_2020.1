#include <stdio.h>

int main(void) {
  float a,b,media;
  int p1,p2;

  printf("Digite valor das duas notas:\n");
  scanf("%f %f", &a,&b);
  printf("Digite o peso da nota 1 e o peso da nota 2:\n");
  scanf("%d %d", &p1,&p2);  

  media = (a*p1 + b*p2)/(p1+p2);

  printf("A média é igual á %.1f",media);
  
  return 0;
}
